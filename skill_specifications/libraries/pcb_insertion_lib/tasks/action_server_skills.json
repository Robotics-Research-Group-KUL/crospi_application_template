{
    "$schema": "../../../../task_specifications/tasks-schema.json",
    "tasks": [
        {
            "name": "MovingJointSpace",
            "robot_specification_file": "$[etasl_ros2_application_template]/robot_models/robot_specifications/ur10e.etasl.lua",
            "task_specification":{
                "from-core_task_lib-version-0.1.0": true,
                "is-move_jointspace_trap": true,
                "file_path": "$[etasl_ros2_application_template]/task_specifications/libraries/core_task_lib/task_specifications/move_jointspace_trap.etasl.lua",
                "parameters": {
                    "maxacc": "$blackboard/input_parameters/joints_max_acc",
                    "maxvel": "$blackboard/input_parameters/joints_max_vel",
                    "target_joints": "$blackboard/input_parameters/target_joints",
                    "units": "radians"
                }
            }
        },
        {
            "name": "MovingCartesian",
            "robot_specification_file": "$[etasl_ros2_application_template]/robot_models/robot_specifications/ur10e.etasl.lua",
            "task_specification":{
                "from-core_task_lib-version-0.1.0": true,
                "is-move_cartesianspace_absolute_pose": true,
                "file_path": "$[etasl_ros2_application_template]/task_specifications/libraries/core_task_lib/task_specifications/move_cartesianspace_absolute_pose.etasl.lua",
                "parameters": {
                    "desired_pose": "$blackboard/input_parameters/desired_pose",
                    "maxvel": "$blackboard/input_parameters/tcp_max_vel",
                    "maxacc": "$blackboard/input_parameters/tcp_max_acc",
                    "eq_r": 0.08,
                    "task_frame": "$blackboard/input_parameters/task_frame"
                }
            }
        }
    ]
}